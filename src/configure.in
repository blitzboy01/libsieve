dnl Process this file with autoconf to produce a configure script.
AC_INIT(sv_parser/sieve.y)
AM_INIT_AUTOMAKE(libsieve, 2.2.0)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_YACC
AC_PROG_INSTALL
AC_PROG_LIBTOOL

dnl Odd Lex and Yacc things
AM_PROG_LEX
AC_DECL_YYTEXT

dnl AC_ARG_PROGRAM

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(fcntl.h malloc.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_TYPE_SIZE_T

dnl Checks for library functions.
AC_FUNC_MEMCMP
AC_FUNC_VPRINTF
AC_CHECK_FUNCS(regcomp strcspn strstr)

AM_CONFIG_HEADER(config.h)

AC_ARG_ENABLE(test,
	[  --enable-test, Build the test programs],
	[case "${enableval}" in
		yes) test=true ;;
		no)  test=false ;;
		*) AC_MSG_ERROR(bad value ${enableval} for --enable-test) ;;
	esac],[debug=false])
AM_CONDITIONAL(TEST, test x$test = xtrue)

AC_ARG_ENABLE(debug,
	[  --enable-debug, Turn on debugging output],
	[case "${enableval}" in
		yes) test=true ;;
		no)  test=false ;;
		*) AC_MSG_ERROR(bad value ${enableval} for --enable-debug) ;;
	esac],[debug=false])
AM_CONDITIONAL(DEBUG, test x$test = xtrue)

AC_OUTPUT(sv_parser/Makefile sv_rsamd5/Makefile sv_interface/Makefile sv_util/Makefile sv_test/Makefile sv_include/Makefile Makefile)
